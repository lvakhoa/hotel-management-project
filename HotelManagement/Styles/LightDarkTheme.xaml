                                                            From="#0090F8" To="#373434"
                                                            Duration="0:0:0.2">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn" />
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>

