    <Style
        TargetType="RadioButton"
        x:Key="DarkButtonTheme">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}" CornerRadius="10"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}">
                            <Border Background="#373434" Height="60" Width="89"
                                    VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                    CornerRadius="5 0 10 0">
                                <Grid Height="50">
                                    <TextBlock Text="Aa"
                                               FontSize="20"
                                               Foreground="{TemplateBinding OpacityMask}"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"
                                               Margin="10,-20,0,0" />
                                </Grid>
                            </Border>

                        </Border>

                        <ControlTemplate.Triggers>

                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="False" />
                                    <Condition Property="IsMouseOver" Value="True" />
                                </MultiTrigger.Conditions>

                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>

                                            <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                            From="#C3C3C3" To="#0090F8"
                                                            Duration="0:0:0.2">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>

                                            <ColorAnimation Storyboard.TargetProperty="Foreground.Color"
                                                            From="#373434" To="#0090F8"
                                                            Duration="0:0:0.2">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>

                                            <ThicknessAnimation Storyboard.TargetProperty="BorderThickness"
                                                                From="1" To="3"
                                                                Duration="0:0:0.2">
                                                <ThicknessAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </ThicknessAnimation.EasingFunction>
                                            </ThicknessAnimation>

                                            <DoubleAnimation Storyboard.TargetProperty="Width"
                                                             From="120" To="123"
                                                             Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>

                                            <DoubleAnimation Storyboard.TargetProperty="Height"
                                                             From="80" To="83"
                                                             Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>

                                            <ColorAnimation Storyboard.TargetProperty="OpacityMask.Color"
                                                            From="#FFF" To="#0090F8"
                                                            Duration="0:0:0.2">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>

                                        </Storyboard>

                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>

                                <MultiTrigger.ExitActions>
