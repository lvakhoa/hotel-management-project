<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:HotelManagement.ViewModel"
                    xmlns:m="clr-namespace:HotelManagement.Model"
                    xmlns:view="clr-namespace:HotelManagement.View">
    
    <DataTemplate DataType="{x:Type vm:HomeVM}">
        <view:Home DataContext="{Binding}" />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:RoomMapVM}">
        <view:RoomMap />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:ManagementVM}">
        <view:Management DataContext="{Binding}" />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:InboxVM}">
        <view:Inbox />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:SettingsVM}">
        <view:Settings DataContext="{Binding}" />
    </DataTemplate>
    
</ResourceDictionary>