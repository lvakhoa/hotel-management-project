<UserControl x:Class="HotelManagement.View.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelManagement.View"
             xmlns:customcontrols="clr-namespace:HotelManagement.CustomControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="638" d:DesignWidth="1010"
               Background="Transparent" Width="1010" Height="638"
             
            >

    <Grid
        Background="#FFF"
        
        >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition  Height="56"/>

                <RowDefinition   Height="58"/>
                <RowDefinition   Height="95"/>
                <RowDefinition   Height="47"/>
                <RowDefinition Height="150"/>
                <RowDefinition  Height="80"/>
                <RowDefinition  Height="75"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                        Orientation="Horizontal">

                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
              
                <TextBlock Text="Settings"
                           Margin="50,0,0,0"
                           FontSize="40"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"/>
            </Grid>
           
            <GridSplitter Grid.Row="2" Height="2" IsEnabled="False" HorizontalAlignment="Stretch" Margin="0,-50,0,0"/>
            <GridSplitter Grid.Row="4" Height="2" IsEnabled="False" HorizontalAlignment="Stretch" Margin="0,-40,0,0"/>
            <Grid Grid.Row="2">
                <TextBlock Text="Account"
                           Margin="50,10,0,0"
                           FontSize="30"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"/>
            </Grid>
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <Ellipse  Width="70" Height="70"
                         Margin="100,0,0,0"
                         >
                    <Ellipse.Stroke>
                        <SolidColorBrush Color="#FF3B3C32"/>
                    </Ellipse.Stroke>



                </Ellipse>
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="10,0,0,0">
                    <TextBlock   FontSize="17"
                           HorizontalAlignment="Left"
                           FontWeight="Bold">
                        Le Khoa
                    </TextBlock>
                    <TextBlock Text="Manager"
                        FontSize="17"
                           HorizontalAlignment="Left"
                           FontWeight="Medium"
                               Foreground="Gray">

                    </TextBlock>
                </StackPanel>
                <ui:SymbolIcon Symbol="Edit24" Margin="320,0,10,0"/>

                <TextBlock x:Name="editTb" Text="Edit Profile" 
                    FontSize="17"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontWeight="Bold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="TextDecorations" Value="Underline" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>

                </TextBlock>


            </StackPanel>
            <TextBlock  Text="Preferences"
                        Grid.Row="4"
                           Margin="50,10,0,0"
                           FontSize="30"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"/>
            <Grid  Grid.Row="5" 
                        Margin="100,20,0,0">

                <TextBlock   FontSize="17"
                             Height="40"
                             Text="Theme"
                           FontWeight="Bold"
                             Margin="0,0,0,70"
                             >

                </TextBlock>
                <StackPanel Margin="-360,0,0,0">
                    <RadioButton 
                                 Style="{StaticResource LightButtonTheme}"
                               
                                 Name="btnLight"
                                Checked="btnLight_Checked">

                    </RadioButton>
                    <TextBlock  Margin="20" Text="Light" HorizontalAlignment="Center"
                                FontWeight="Bold"
                               FontSize="17"
                                Foreground="{Binding ElementName=btnLight, Path=Foreground ,Mode=TwoWay}"
                               >

                    </TextBlock>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Margin="0,0,300,0">
                    <RadioButton 
              Style="{StaticResource DarkButtonTheme}"
                        Name="btnDark"
            
              Checked="btnDark_Checked">

                    </RadioButton>
                    <TextBlock  Margin="20,20,20,0" Text="Dark" HorizontalAlignment="Center"
                                FontWeight="Bold"
                               FontSize="17"
                                Foreground="{Binding ElementName=btnDark, Path=Foreground,Mode=TwoWay}"
                               >

                    </TextBlock>
                </StackPanel>


            </Grid>
            <StackPanel  Grid.Row="6" Orientation="Horizontal"
                        Margin="100,0,0,0" VerticalAlignment="Center" >
                <TextBlock  VerticalAlignment="Center" FontSize="17"
                             Text="Language"
                           FontWeight="Bold">

                </TextBlock>
                <ComboBox x:Name="cbboxLanguage" FontSize="20"   Margin="135,0,0,18" VerticalAlignment="Center"
  
  Style="{StaticResource MaterialDesignFloatingHintComboBox}" >
                    <ComboBoxItem>
                        English
                    </ComboBoxItem>
                    <ComboBoxItem>
                        Tiếng Việt
                    </ComboBoxItem>

                </ComboBox>

            </StackPanel>
            <StackPanel  Grid.Row="7" Orientation="Horizontal"
                        Margin="100,0,0,0" VerticalAlignment="Center" >
                <TextBlock  VerticalAlignment="Center" FontSize="17"
                             Text="Date-time Format"
                           FontWeight="Bold">

                </TextBlock>
                <DatePicker FontSize="17"  Margin="70,0,0,0"
  Width="100"
  materialDesign:HintAssist.Hint="Pick Date"
                            
  Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                <TextBlock  VerticalAlignment="Center" FontSize="17"
                             Text="24 hours"
                            Margin="170,0,0,0"
                           FontWeight="Bold">

                </TextBlock>
                <ToggleButton Margin="30,0,0,0"
  Style="{StaticResource MaterialDesignSwitchToggleButton}"
  ToolTip="Default ToggleButton Style" />


            </StackPanel>
            <Grid Grid.Row="8"
                  Background="#d9d9d9">

            </Grid>
            <Border Grid.Row="8"
 
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                  
                         Margin="0,0,70,0"
                    CornerRadius="10"
      
      >
                <RadioButton 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0"
                         Style="{StaticResource Logoutbutton}">
                   
                </RadioButton>
            </Border>


        </Grid>
    </Grid>

</UserControl>
