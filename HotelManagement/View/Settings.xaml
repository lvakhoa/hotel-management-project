<UserControl x:Class="HotelManagement.View.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelManagement.View"
             xmlns:customcontrols="clr-namespace:HotelManagement.CustomControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="680" d:DesignWidth="1000"
               Background="Transparent"
             
            >

    <Border CornerRadius="10"
        Background="#FFF"
        BorderBrush="#231F20"
        BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition  Height="60"/>
                <RowDefinition   Height="60"/>
                <RowDefinition   Height="100"/>
                <RowDefinition   Height="60"/>
                <RowDefinition Height="150"/>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                        Orientation="Horizontal">
                    <TextBlock Text="settings" 
                           VerticalAlignment="Center" 
                           Margin="15,0,0,0" 
                           FontSize="18"/>
                </StackPanel>
                <customcontrols:Button Grid.Column="1"
                                   x:Name="btnMinimize"
                                
                                   HoveredColor="#D4D2D2"
                                   ClickedColor="#CAC9C9"/>
                <customcontrols:Button Grid.Column="2"
                                   x:Name="btnClose"
                                 
                                   HoveredColor="#EE4242"
                                   ClickedColor="#FF2525" 
                                   BorderRadius="0, 10, 0, 0"/>
            </Grid>
            <Grid Grid.Row="1">
                <TextBlock Text="Settings"
                           Margin="50,0"
                           FontSize="40"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"/>
            </Grid>
            <Grid Grid.Row="2">
                <TextBlock Text="Account"
                           Margin="50,10,0,0"
                           FontSize="30"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"/>
            </Grid>
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <Ellipse  Width="100" Height="100"
                         Margin="100,0,0,0"
                         >
                    <Ellipse.Stroke>
                        <SolidColorBrush Color="#FF3B3C32"/>
                    </Ellipse.Stroke>
                   


                </Ellipse>
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="10,0,0,0">
                    <TextBlock   FontSize="17"
                           HorizontalAlignment="Left"
                           FontWeight="Bold">
                        Le Khoa
                    </TextBlock>
                    <TextBlock Text="Manager"
                        FontSize="17"
                           HorizontalAlignment="Left"
                           FontWeight="Medium"
                               Foreground="Gray">

                    </TextBlock>
                </StackPanel>
                <ui:SymbolIcon Symbol="Edit24" Margin="500,0,10,0"/>
                
                <TextBlock Text="Edit Profile"   
                    FontSize="17"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontWeight="Bold">

                </TextBlock>


            </StackPanel>
            <TextBlock  Text="Preferences"
                        Grid.Row="4"
                           Margin="50,10,0,0"
                           FontSize="30"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"/>
            <StackPanel Grid.Row="5" Orientation="Horizontal"
                        Margin="100,20,0,0">
                <TextBlock   FontSize="17"
                             Height="40"
                             Text="Theme"
                           FontWeight="Bold"
                             Margin="0,0,0,70"
                             >

                </TextBlock>
                <StackPanel Margin="100,0,0,0">
                    <RadioButton 
                                 Style="{StaticResource LightButtonTheme}"
                                 Height="80"
                                 Name="btnLight"
                                 Width="120">

                    </RadioButton>
                    <TextBlock  Margin="20" Text="Light" HorizontalAlignment="Center"
                                FontWeight="Bold"
                               FontSize="17"
                                Foreground="{Binding ElementName=btnLight, Path=Foreground ,Mode=TwoWay}"
                               >

                    </TextBlock>
                </StackPanel>
                <StackPanel Margin="100,0,0,0">
                    <RadioButton 
              Style="{StaticResource DarkButtonTheme}"
                        Name="btnDark"
              Height="80"
              Width="120">

                    </RadioButton>
                    <TextBlock  Margin="20,20,20,0" Text="Dark" HorizontalAlignment="Center"
                                FontWeight="Bold"
                               FontSize="17"
                                Foreground="{Binding ElementName=btnDark, Path=Foreground,Mode=TwoWay}"
                               >

                    </TextBlock>
                </StackPanel>


            </StackPanel>
            <StackPanel  Grid.Row="6" Orientation="Horizontal"
                        Margin="100,0,0,0" VerticalAlignment="Center" >
                <TextBlock  VerticalAlignment="Center" FontSize="17"
                             Text="Language"
                           FontWeight="Bold">

                </TextBlock>
                <ComboBox FontSize="17" Margin="135,0,0,18" VerticalAlignment="Center"
  materialDesign:HintAssist.Hint="English"
  Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                    <ComboBoxItem>
                        English
                    </ComboBoxItem>
                    <ComboBoxItem>
                        Ti?ng Vi?t
                    </ComboBoxItem>

                </ComboBox>

            </StackPanel>
            <StackPanel  Grid.Row="7" Orientation="Horizontal"
                        Margin="100,0,0,0" VerticalAlignment="Center" >
                <TextBlock  VerticalAlignment="Center" FontSize="17"
                             Text="Date-time Format"
                           FontWeight="Bold">

                </TextBlock>
                <DatePicker FontSize="17" Margin="70,0,0,0"
  Width="100"
  materialDesign:HintAssist.Hint="Pick Date"
  Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                <TextBlock  VerticalAlignment="Center" FontSize="17"
                             Text="24 hours"
                            Margin="60,0,0,0"
                           FontWeight="Bold">

                </TextBlock>
                <ToggleButton Margin="30,0,0,0"
  Style="{StaticResource MaterialDesignSwitchToggleButton}"
  ToolTip="Default ToggleButton Style" />


            </StackPanel>
            <Border Grid.Row="8" 
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Height="50"
                    Width="150"
                         Margin="0,0,70,0"
                    CornerRadius="10"
        Background="Gray"
        BorderBrush="#231F20"
        BorderThickness="1">
                <RadioButton 
                         Style="{StaticResource BtnStyle}">
                    <Grid>

                        <ui:SymbolIcon Symbol="ArrowExit20"
                                                       FontSize="24" 
                                                       Foreground="White"
                                                       Margin="12,0,0,0"
                                                       HorizontalAlignment="Left"/>

                        <TextBlock Text="Logout"
                                   Foreground="White"
                                                   Style="{StaticResource TextStyle}"/>

                    </Grid>
                </RadioButton>
            </Border>


        </Grid>
    </Border>

</UserControl>
