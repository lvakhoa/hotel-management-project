<UserControl x:Class="HotelManagement.CustomControls.Toast.LoadingToast"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelManagement.CustomControls.Toast"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="This">
    
    <local:BaseToast IsLoading="True" BackgroundColor="#fff" 
                     ForegroundText="#7D7C7C" TextContent="{Binding ElementName=This, Path=Text}"
                     HorizontalAlignment="Right" Margin="0 0 -300 0 " />

</UserControl>